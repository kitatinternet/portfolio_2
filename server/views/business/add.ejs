<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Add Content -->
<main class="container">
    <div class="jumbotron p-1">
      <h4 class="display-6"> <%= title %> > </h4>
    </div>

    <div class="row">
        <div class="offset-md-1 col-md-5">        
            <form class="form" method="POST">  
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Name"
                    name="name" required>
                </div>    

                <div class="form-group">
                    <label for="numberTextField">Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the Number"
                    name="number" required>
                </div>    

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Email"
                    name="email" required>
                </div>    

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                    <a href="/business/list" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>
    </div>
</main>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>